<Window x:Class="DebtBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebtBook"
        mc:Ignorable="d"
        Title="DebtBook" Height="450" Width="800"
        Background="{StaticResource BgImage}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="2">
            <MenuItem Header="Open" FontSize="24"></MenuItem>
            <MenuItem Header="Save" FontSize="24"></MenuItem>
        </Menu>
        
        <StackPanel Grid.Row="1">
            <TextBlock Text="Debtors:" FontSize="24" Margin="10"></TextBlock>
            <ListBox MinHeight="300" Margin="10"></ListBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button MinHeight="100" MinWidth="200"  HorizontalAlignment="Center" Margin="65" FontSize="50">Add</Button>
        </StackPanel>
    </Grid>
</Window>
