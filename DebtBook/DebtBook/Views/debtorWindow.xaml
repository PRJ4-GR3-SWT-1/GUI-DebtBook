<Window x:Class="DebtBook.Views.debtorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebtBook.Views"
        mc:Ignorable="d"
        Title="debtorWindow" Height="450" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <DataGrid HorizontalAlignment="Left" MinHeight="100" Margin="5" VerticalAlignment="Top" MinWidth="100"/>
        <Button Content="Close Window" Name="closeButton" Height="20" VerticalAlignment="Bottom" Width="100"></Button>
        <StackPanel Grid.Column="1">
            <TextBlock> - - Add Debt: - - </TextBlock>
            <Label Content="_value"></Label>
            <TextBox Name="valueBox"></TextBox>
            <Button Content="Add" Name="addButton" ></Button>
            
        </StackPanel>
    </Grid>
</Window>
