<Window x:Class="DebtBook.addDebtorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebtBook"
        mc:Ignorable="d"
        Title="Add New Debtor" Height="200" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="_Name"></Label>
            <TextBox Name="NameBox" Margin="5"></TextBox>
            <Label Content="_Initial Value"></Label>
            <TextBox Name="ValueBox" Margin="5"></TextBox>
            <Button x:Name="saveButton" Content="_Save" Margin="5" Click="saveButton_Click"></Button>
            <Button x:Name="cancelButton" Content="Cancel" Margin="5" Click="cancelButton_Click" ></Button>
        </StackPanel>
    </Grid>
</Window>
